                android:text="TIAS HAFIDZOTUL L\ntiasluthfiana@gmail.com "
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnsingup"
            android:layout_width="360dp"
            android:layout_height="59dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/poppins_medium"
            android:text="CONTINUE AS TIAS"
            android:textAlignment="viewStart"
            android:paddingStart="120dp"
            app:layout_constrainButton_toButtonOf="parent"
            app:layout_constrainLeft_toLeftOf="parent" />

        <TextView
            style="@style/viewParent.headerText.NoMode"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:text="Choose another account "
            android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>